description: Soochi is a list of well designed products.
---

{{#extend "master"}}
{{#content "body"}}
			
			<section class="list-container container">
				<ul class="list">

				{{#with products}}
				  {{#each products}}

							<li class="list-item">
								<a href="{{source}}" title="{{name}} - {{reason}}" target="_blank">
									<article class="list-item-article">
										<figure>
											<img data-src="{{image}}" src="/images/bg.png" alt="" />
											<noscript>
												<img src="{{image}}" />
											</noscript>
										</figure>
										<header>
											<h3 class="store-name">{{store}}</h3>
											<h1 class="produc-name">{{name}}</h1>
											<h2 class="price">â‚¹ {{price}}</h2>
											<h4 class="reason">{{reason}}</h4>
										</header>
									</article>
								</a>
							</li>

				  {{/each}}
				{{/with}}

				</ul>
			</section>
  
{{/content}}
{{/extend}}
